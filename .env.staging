# Staging Environment Configuration

# Application Configuration
APP_NAME="Advocacia Direta WhatsApp Bot - Staging"
DEBUG=true
ALLOWED_HOSTS=["staging.yourdomain.com"]

# Database Configuration
DATABASE_URL=postgresql+asyncpg://advocacia_staging:staging_password@db:5432/advocacia_direta_staging
POSTGRES_DB=advocacia_direta_staging
POSTGRES_USER=advocacia_staging
POSTGRES_PASSWORD=staging_password

# Redis Configuration
REDIS_URL=redis://:staging_redis_password@redis:6379/0
REDIS_PASSWORD=staging_redis_password

# WhatsApp Business API Configuration (Test Account)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=STAGING_WHATSAPP_TOKEN
WHATSAPP_PHONE_NUMBER_ID=STAGING_PHONE_NUMBER_ID
WHATSAPP_WEBHOOK_VERIFY_TOKEN=STAGING_WEBHOOK_VERIFY_TOKEN

# Security
SECRET_KEY=staging_secret_key_change_this

# Session Management
SESSION_TIMEOUT_MINUTES=15
REENGAGEMENT_TIMEOUT_MINUTES=5

# Analytics
ANALYTICS_ENABLED=true

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=/app/logs/app.log

# Performance
WORKER_PROCESSES=2
MAX_CONNECTIONS=100